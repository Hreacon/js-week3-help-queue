<div>
  <form>
    <div class="form-group">
      <label for="students">Student Names</label>
      {{input value=students id="students" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="location">Pair Location</label>
      {{input value=location id="location" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="problem">Describe problem you're having</label>
      {{textarea rows="8" cols="40" value=problem id="problem" class="form-control"}}
    </div>

    <button class="btn btn-success"{{action 'saveTicket'}}>Add Ticket</button>
  </form>
</div>
